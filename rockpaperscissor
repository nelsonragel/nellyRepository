<script>
var X = 0;
function myFunction()
{
	var num=Math.floor(1 + Math.random()*3);
	var link = document.getElementById("items"); //gets the image tags id and puts it 
	link.setAttribute("src", "Images/" + num + ".jpg"); //every time the 
	var num2=Math.floor(1 + Math.random()*3);
	var link = document.getElementById("itemss"); //gets the image tags id and puts it 
	link.setAttribute("src", "Images/" + num2 + ".jpg"); //every time the 
	outcome(num,num2);
}

function outcome(a,b)
{

if (a == b){
alert("Try Again");
}
else if(a==1 && b == 2){
alert("I WIN");
}
else if(a==2 && b == 3){
alert("I WIN");
}
else if(a==3 && b == 2){
alert("I WIN");
}
else if(a==1 && b == 3){
alert("YOU WIN");
X = X + 1;
}
else if(a==3 && b == 1){
alert("I WIN");

}
else if(a==2 && b == 1){
alert("YOU WIN");
X=X+ 1;
}
X=X;
alert("Your Score is " + X);
}
